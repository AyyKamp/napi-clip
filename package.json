{
  "name": "@ayykamp/napi-clip",
  "version": "0.1.2",
  "description": "Node.js wrapper for the C++ Clip library providing cross plattform support to copy/paste clipboard content",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/AyyKamp/napi-clip.git"
  },
  "main": "index.js",
  "scripts": {
    "install": "node-pre-gyp install --fallback-to-buil=false || cmake-js compile",
    "build": "cmake-js compile",
    "build:dev": "cmake-js compile --debug",
    "test": "jest"
  },
  "author": "AyyKamp",
  "license": "ISC",
  "dependencies": {
    "bindings": "^1.5.0",
    "cmake-js": "^6.0.0",
    "node-addon-api": "^1.7.1",
    "node-pre-gyp": "^0.14.0"
  },
  "binary": {
    "module_name": "napi_clip",
    "module_path": "./build/Release/",
    "host": "https://github.com/AyyKamp/napi-clip/releases/download/",
    "remote_path": "{version}"
  },
  "publishConfig": { "registry": "https://npm.pkg.github.com/" }
}
